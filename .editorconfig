# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[git/{gitignore*,gitattributes*,gitconfig*}]
# Git uses tabs by default; let's not fight
indent_style = tab

[Makefile]
# Git uses tabs by default; let's not fight
indent_style = tab

[gitconfig]
indent_style = tab
