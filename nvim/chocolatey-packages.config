<?xml version="1.0" encoding="utf-8"?>
<packages>
  <package id="neovim" />

  <!--
       fzf: "Fuzzy Finder" for fuzzy/partial filename matches
       Used by: fzf, fzf.vim in vim/neovim
    -->
  <package id="fzf" />

  <!--
       rg: file contents search tool; similar to grep
       Used by: 'mileszs/ack.vim' in vim/neovim
       Alternative to: ag
   -->
  <package id="ripgrep" />

  <!-- Python support in neovim-->
  <package id="python2" />
  <package id="python3" />

  <!-- node.js support in neovim-->
  <package id="nodejs" />

  <!-- Common fonts -->
  <package id="dejavufonts" />
  <package id="hackfont" />
  <package id="SourceCodePro" />
  <package id="FiraCode" />
  <package id="Inconsolata" />

  <!-- .editorconfig support for editorconfig/editorconfig-vim plugin -->
  <package id="editorconfig.core" />

  <!-- PlantUml, since some plugins use it -->
  <package id="plantuml" />
</packages>
