{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
        {
            "label": "InvokeBuild",
            "type": "shell",
            "command": "Invoke-Build",
            "options": {
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "markdownlint",
            "type": "shell",
            "command": "markdownlint '**/*.md' --ignore 'nvim/node_modules' --ignore 'nvim/plugged' --ignore 'vim/plugged' --ignore 'WindowsPowerShell/Modules' --ignore 'powershell/Modules' 2>&1",
            "options": {
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": {
                "owner": "md",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+) (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "InvokeBuild-markdownlint",
            "type": "shell",
            "command": "Invoke-Build -Task Lint-Markdownlint",
            "options": {
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": {
                "owner": "md",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+) (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "InvokeBuild-shellcheck",
            "type": "shell",
            "command": "Invoke-Build -Task Lint-Shellcheck",
            "options": {
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": [
                "$jshint"
            ]
        }
    ]
}
